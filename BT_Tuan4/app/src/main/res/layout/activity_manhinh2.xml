<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="manhinh2">

<TextView
    android:textSize="15sp"
    android:layout_marginBottom="25dp"
    android:text="Nội dung câu hỏi ..."
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/txtCauHoi"/>

    <RadioGroup
        android:id="@+id/radioGroup_1"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:orientation="vertical"
        android:paddingLeft="100dp">

        <RadioButton
            android:id="@+id/rb_mh2_1_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả lời cho câu hỏi ..." />

        <RadioButton
            android:id="@+id/rb_mh2_1_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-30dp"
            android:text="Trả lời cho câu hỏi ..." />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <RadioButton
            android:id="@+id/rb_mh2_1_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trả lời cho câu hỏi ..." />

        <RadioButton
            android:id="@+id/rb_mh2_1_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-30dp"
            android:text="Trả lời cho câu hỏi ..." />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            android:id="@+id/btnPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/previous" />

        <Button
            android:id="@+id/btnResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESULT" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next" />
    </LinearLayout>
</LinearLayout>
